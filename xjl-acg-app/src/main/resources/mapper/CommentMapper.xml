<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xjlacgapp.mapper.CommentMapper">
    <insert id="addComment" parameterType="com.example.xjlacgapp.pojo.Comment">
        insert into acg_comment values (#{productid},#{userid},#{comment},#{createtime},#{id})
    </insert>
    <select id="queryById" resultType="com.example.xjlacgapp.pojo.Comment">
        select * from acg_comment where productid = #{productid}
    </select>
</mapper>